<div>
	<h1><%= @wiki.title %></h1>
</div>
<div class="row">
	<div class="col-md-8">
		<p><%= @wiki.body %></p>
	</div>
	<div class="col-md-4">
		<%= link_to "Edit", edit_topic_wiki_path(@wiki.topic, @wiki), class: 'btn btn-success' %>
		<%= link_to "Delete Wiki", [@wiki.topic, @wiki], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this Wiki?' } %>
	</div>
</div>
