<h1><%= @topic.name %></h1>
<div class="row">
	<div class="col-md-8">
		<p class="lead"><%= @topic.description %></p>
		<% @topic.wikis.each do |wiki| %>
			<div class="media">
				<div class="media-body">
					<h4 class="media-heading">
						<%= link_to wiki.title, topic_wiki_path(@topic, wiki) %>
					</h4>
				</div>
			</div>
		<% end %>
	</div>
	<div class="col-md-4">
		<%= link_to "New Wiki Entry", new_topic_wiki_path(@topic), class: 'btn btn-success' %>
	</div>
</div>
