<h1>Categories</h1>
<div class="row">
	<% @topics.each do |topic| %>
		<div class="media">
			<div class="media-body">
				<h4 class="media-heading">
					<ul>
						<li><%= link_to topic.name, topic %></li>
					</ul>
				</h4>
				<small>
					<p class="tab"><%= topic.description %></p>
				</small>
			</div>
		</div>
	<% end %>
</div>
