<h1>Categories</h1>
<hr>
<div class="row">
	<div class="col-md-8">
		<% @topics.each do |topic| %>
			<div class="media">
				<div class="media-body">
					<h4 class="media-heading">
						<ul>
							<li><%= link_to topic.name, topic %></li>
						</ul>
				</div>
			</div>
		<% end %>
	</div>
</div>